<%= render 'shared/navbar' %>
  <div class="container">
    <h1>Create Your New Event</h1>
      <%= simple_form_for @booking do |f| %>
        <%= f.input :title, placeholder: "Title" %>
        <%= f.input :category, collection: Booking::CATEGORY, :prompt => "Category" %>
        <%= f.input :place, placeholder: "Place" %>
        <%= f.file_field :photos, multiple: true %>
        <%= f.button :submit, "Create", class: 'btn btn-secondary' %>
        <% end %>
  </div>

<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <h2>Flatpickr Demo</h2>

    <%= simple_form_for :search, method: "get" do |f| %>
      <%= f.input :starts_at, as: :string, required: false, input_html: {id: "start_date"} %>
      <%= f.input :ends_at, as: :string, required: false, input_html: {id: "end_date"} %>
      <%= f.button :submit, "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
